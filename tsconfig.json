{
  "extends": "@ts-mono/base/tsconfig",
  "exclude": [
    "node_modules",
    "out"
  ],
  "compilerOptions": {
    "declaration": false,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "noEmit": true,
    "module": "esnext",
    "moduleResolution": "node",
    "isolatedModules": true,
    "jsx": "preserve"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ]
}
